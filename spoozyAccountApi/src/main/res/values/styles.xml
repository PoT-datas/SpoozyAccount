        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_tab_icone_size</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@string/font_fontFamily_medium</item>
    </style>

    <!-- Text Special -->
    <style name="InputTextOnce">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/text_special_size</item>
        <item name="android:textCursorDrawable">@color/colorLight</item>
        <item name="android:textColorHint">@color/colorGray</item>
    </style>

    <!-- Text Special -->
