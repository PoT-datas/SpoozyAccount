        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">@dimen/text_input_size</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/colorLight</item>
        <item name="android:textCursorDrawable">@color/colorGray</item>
        <item name="android:textColorHint">@color/colorGray</item>
    </style>

    <!-- Text Special -->
